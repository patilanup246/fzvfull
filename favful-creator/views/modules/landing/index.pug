extends ../../layouts/landing

block content
    .container
        .row
            .col-md-8.col-md-offset-2.col-xs-12.col-sm-10.col-sm-offset-1
                .landing-wrap.text-center
                    .landing-logo.text-center
                        img.object-fit(src='../img/static/favful-logo-white.svg')
                    .landing-title
                        h3(style="color:#fff") Creator
                    .landing-description(style="color:#fff;margin-top:15px")
                        i.fa.fa-heart(style="font-size:0.5em")
                        | &nbsp;&nbsp;
                        i.fa.fa-heart(style="font-size:0.65em")
                        | &nbsp;&nbsp;
                        i.fa.fa-heart(style="font-size:0.8em")
                        | &nbsp;
                        | &nbsp;Private Invitations Only&nbsp;
                        | &nbsp;
                        i.fa.fa-heart(style="font-size:0.8em")
                        | &nbsp;&nbsp;
                        i.fa.fa-heart(style="font-size:0.65em")
                        | &nbsp;&nbsp;
                        i.fa.fa-heart(style="font-size:0.5em")
                    .landing-form-wrap
                        form(action='/', method='post')
                            input(type='hidden', name='_csrf' value=csrfToken)
                            .form-group
                                input.form-control.landing-input(type='email', id='inviteemail', name='inviteemail', placeholder='Enter invited email address')
                            .form-group
                                button.btn.btn-favful.btn-outline.btn-fullwidth(type='submit') Let me in