if tutorial.type === 'video'
    - var ogtype = 'video'
    - var ogimage = 'http://img.youtube.com/vi/' + tutorial.youtubeid + '/0.jpg'
if tutorial.type === 'image'
    - var ogtype = 'website'
    - var ogimage = tutorial.thumbnail

doctype html
html
    head
        title Favful - #{title}
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')

        meta(name='title', content='Favful - ' + title)
        meta(name='description', content=tutorial.shortdescription)
        meta(name='keywords', content='favful, beauty, reviews, makeup, skin, care, tips, tutorials, product, shop, buy')

        meta(property='og:title', content=title + ' | Favful')
        meta(property='og:type', content=ogtype)
        meta(property='og:url', content='www.favful.com.my/tutorial/' + tutorial.slug)
        meta(property='og:image', content=ogimage)
        meta(property='og:image:width', content='480')
        meta(property='og:image:height', content='270')
        meta(property='og:description', content=tutorial.shortdescription)
        meta(property='fb:app_id', content='1912122202399258')

        link(rel='stylesheet', href='../css/custom.css')
        link(rel='stylesheet', href='../css/responsive.css')
        link(rel='stylesheet', href='../vendors/bootstrap/bootstrap.min.css')
        link(rel='stylesheet', href='../vendors/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='../vendors/stickyfooter/jquery.stickyfooter.min.css')
        link(rel='stylesheet', href='../vendors/bootstrap-social/bootstrap-social.css')
        link(rel='stylesheet', href='../vendors/summernote/summernote.css')
        script(src='../vendors/jquery/jquery-3.2.0.min.js')
        script(src='../vendors/bootstrap/bootstrap.min.js')
        script(src='../vendors/stickyfooter/jquery.stickyfooter.min.js')
        script(src='../vendors/summernote/summernote.min.js')

        script.
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                        (i[r].q = i[r].q || []).push(arguments)
                    }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
            ga('create', 'UA-98811684-1', 'auto');
            ga('send', 'pageview');

    body
        include ../partials/header
        .content-body
            block content
    include ../partials/scripts