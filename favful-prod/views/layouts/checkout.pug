doctype html
html
    head
        include ../partials/gtm
        title Favful - #{title}
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')

        meta(name='title', content='Favful - ' + title)
        meta(name='description', content='Favful provides the latest beauty reviews, ratings, price comparisons, makeup tips and tutorials! Earn points to redeem free beauty products.')
        meta(name='keywords', content='favful, beauty, reviews, makeup, skin, care, tips, tutorials, product, shop, buy')

        meta(property='og:title', content=title + ' | Favful')
        meta(property='og:type', content='Website')
        meta(property='og:image', content='https://www.favful.com.my/img/static/favful-logo.svg')
        meta(property='og:image:width', content='800')
        meta(property='og:image:height', content='600')
        meta(property='og:description', content='Favful provides the latest beauty reviews, ratings, price comparisons, makeup tips and tutorials! Earn points to redeem free beauty products.')
        meta(property='fb:app_id', content='1912122202399258')

        link(rel='stylesheet', href='../css/custom.css')
        link(rel='stylesheet', href='../css/components.css')
        link(rel='stylesheet', href='../css/responsive.css')
        link(rel='stylesheet', href='../vendors/bootstrap/bootstrap.min.css')
        link(rel='stylesheet', href='../vendors/font-awesome/css/font-awesome.min.css')
        link(rel='stylesheet', href='../vendors/stickyfooter/jquery.stickyfooter.min.css')
        script(src='../vendors/jquery/jquery-3.2.0.min.js')
        script(src='../vendors/bootstrap/bootstrap.min.js')
        script(src='../vendors/stickyfooter/jquery.stickyfooter.min.js')
        script(src='/vendors/truncate/truncate.min.js')
        script(src='https://www.paypalobjects.com/api/checkout.js', data-version-4)
        script(src='https://js.braintreegateway.com/web/3.16.0/js/client.min.js')
        script(src='https://js.braintreegateway.com/web/3.16.0/js/paypal-checkout.min.js')
        include ../partials/ga

    body
        include ../partials/gtm-noscript
        header
            include ../partials/header
        .checkout-content-wrap
            block content
    footer.footer
        include ../partials/footer
    include ../partials/scripts